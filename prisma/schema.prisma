generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Content {
  id          String      @id @default(cuid())
  title       String
  description String?
  type        ContentType
  
  // For image content
  filename    String?
  path        String?
  size        Int?
  mimeType    String?
  
  // ImageKit specific fields
  imagekitFileId String?   // ImageKit file ID for deletion
  imagekitPath   String?   // ImageKit file path for URL generation
  
  // For article content
  content     String?
  excerpt     String?
  
  published   Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum ContentType {
  IMAGE
  ARTICLE
}

model Donation {
  id             String        @id @default(cuid())
  name           String
  city           String
  amount         Int           // Amount in Rupiah (stored as integer)
  proofImagePath String        // Path to uploaded proof image
  status         DonationStatus @default(PENDING)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

enum DonationStatus {
  PENDING
  VERIFIED
  REJECTED
}
